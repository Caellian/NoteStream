<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/NoteStreamButtonDefault</item>
        <item name="android:colorBackground">@color/backgroundDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>

    <style name="NoteStreamButtonShuffle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_shuffle</item>
    </style>

    <style name="NoteStreamButtonAdd" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_green_round</item>
    </style>

    <style name="NoteStreamButtonDefault" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_custom</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
