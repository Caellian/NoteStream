<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playableView"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/labelSongTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/song_title_default"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/labelTileDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/song_author_default"
            android:textColor="@color/guiGrey"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonSongOptions"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_more_vert"
        android:padding="5dp" />

</LinearLayout>